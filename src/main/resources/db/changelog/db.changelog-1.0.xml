<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="kiril4a">
        <!-- Category Table -->
        <createSequence sequenceName="category_id_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="categories">
            <column name="id" type="BIGINT" defaultValueSequenceNext="category_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <!-- Product Table -->
        <createSequence sequenceName="product_id_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="products">
            <column name="id" type="BIGINT" defaultValueSequenceNext="product_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_code" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_products_categories" references="categories(id)"/>
            </column>
        </createTable>

        <!-- Order Table -->
        <createSequence sequenceName="order_id_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="orders">
            <column name="id" type="BIGINT" defaultValueSequenceNext="order_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_number" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="customer_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="order_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- OrderItem Table -->
        <createSequence sequenceName="order_item_id_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="order_items">
            <column name="id" type="BIGINT" defaultValueSequenceNext="order_item_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_items_products" references="products(id)"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_items_orders" references="orders(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
