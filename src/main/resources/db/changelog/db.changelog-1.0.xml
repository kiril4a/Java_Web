<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="kiril4a">
        <createSequence sequenceName="categories_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="categories">
            <column name="id" type="BIGINT" defaultValueSequenceNext="categories_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createSequence sequenceName="products_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="products">
            <column name="id" type="BIGINT" defaultValueSequenceNext="products_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_products_categories" references="categories(id)"/>
            </column>
        </createTable>

        <createSequence sequenceName="orders_seq" incrementBy="1" startValue="1"/>
        <createTable tableName="orders">
            <column name="id" type="BIGINT" defaultValueSequenceNext="orders_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="order_products">
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_products_orders" references="orders(id)"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_products_products" references="products(id)"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="order_products" columnNames="order_id, product_id"/>

        <createIndex indexName="idx_products_name" tableName="products">
            <column name="name"/>
        </createIndex>
        <createIndex indexName="idx_products_category_id" tableName="products">
            <column name="category_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
